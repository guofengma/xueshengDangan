}
/*card-info  */
.card-info{
  padding:0 50rpx;
}
.card-info .item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.card-info .item label{
 width: 20%
}

.placeholder{
  color: #666;
}
