.select{
    display: flex;
  align-items: center;
}
.flex{
  flex: 1
}
/*卡说明  */
.card-intro{
  padding: 30rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
}
.card-intro .card{
 width: 100%;
 height: 420rpx;
}
/*btn  */
.btn-wrap{
  display: flex;
  align-items: center;
  width: 96%;
  margin: 6rpx auto;
}
.btn{
  border-radius: 8rpx;
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #ccc
}
.btn-primary{
  background: #4AB848
}
.unbundle{
  background: #ED7629
}
